{{! Left Sidebar }}
<aside class="lore-sidebar">
    <div class="sidebar-inner">
        <div class="portrait">
            <img class="profile-img" src="{{actor.img}}" data-edit="img" data-action="onEditImage" title="{{actor.name}}" />
        </div>

        <div class='attributes flexcol'>
            <label class='attribute-label'>{{localize 'LORE.SheetLabels.Attributes'}}</label>
            {{#each system.attributes as |attribute key|}}
                <div class='attribute flexrow flex-between' data-attribute='{{key}}'>
                    <label
                        class='attribute-roll-label rollable align-left'
                        data-action='roll'
                        data-roll='{{attribute.value}}d6khx+@attributes.{{key}}.mod'
                        data-label='{{localize (lookup @root.config.attributes key)}}'
                    >
                        {{localize (lookup @root.config.attributes key)}}
                    </label>
                    {{#if (eq ../editingAttribute key)}}
                        <input type='number' class='attribute-rank-input' value='{{attribute.value}}' min='0' style='width:3em;text-align:right;' data-key='{{key}}'>
                    {{else}}
                        <label
                            class='attribute-formula-label roll-summary align-right'
                            data-label='{{localize (lookup @root.config.attributes key)}}'
                        >
                            {{attribute.value}}d6{{numberFormat attribute.mod decimals=0 sign=true}}
                        </label>
                    {{/if}}
                </div>
            {{/each}}
        </div>
        <div class="horizontal-line"></div>

        <div class='stats-container'>
            <div class='stat-container grid grid-2col'>
                <label for='system.movement' class='stat-label' title='{{localize "LORE.Actor.base.FIELDS.movement.label"}}'>
                    <img src="icons/svg/wingfoot.svg" alt='{{localize "LORE.Actor.base.FIELDS.movement.label"}}' class="stat-icon"/>
                </label>
                <input
                    class='stat-input text-center'
		            type='text'
		            name='system.movement'
		            value='{{system.movement}}'
		            data-dtype='Number'
	            />
            </div>
            <div class='stat-container grid grid-2col'>
                <label for='system.parry' class='stat-label' title='{{localize "LORE.Actor.base.FIELDS.parry.label"}}'>
	                <img src="icons/svg/combat.svg" alt='{{localize "LORE.Actor.base.FIELDS.parry.label"}}' class="stat-icon"/>
                </label>
                <input
                    class='stat-input text-center'
		            type='text'
		            name='system.parry'
		            value='{{system.parry}}'
		            data-dtype='Number'
	            />
            </div>
            <div class='stat-container grid grid-2col'>
                <label for='system.toughness' class='stat-label' title='{{localize "LORE.Actor.base.FIELDS.toughness.label"}}'>
	                <img src="icons/svg/tower.svg" alt='{{localize "LORE.Actor.base.FIELDS.toughness.label"}}' class="stat-icon"/>
                </label>
                <input
                    class='stat-input text-center'
		            type='text'
		            name='system.toughness'
		            value='{{system.toughness}}'
		            data-dtype='Number'
	            />
            </div>
        </div>
    </div>
</aside>